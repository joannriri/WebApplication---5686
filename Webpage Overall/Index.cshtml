@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title>
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/Index.css" />
    </head>
   
    <body>
        <div class="homepage">
            <div class="hero text-center text-white">
                <div class="container">
                    <h1 class="display-4">Welcome to BurgerQueen</h1>
                    <p class="lead">Delicious food to fill that stomach frown upside down!</p>
                    <a class="btn order-button" href="Products/Item">Order Now</a>
                </div>
            </div>
            <section class="features py-5 text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 feature">
                            <h3>Fresh Ingredients</h3>
                            <p>We make sure to serve you quality ingredients</p>
                        </div>
                        <div class="col-md-4 feature">
                            <h3>Wide Variety of choices</h3>
                            <p>We offer various of different burgers to cater everyone's cravings</p>
                        </div>
                        <div class="col-md-4 feature">
                            <h3>Fast Delivery</h3>
                            <p>We make haste, while serving you a fresh hot meal</p>
                        </div>
                    </div>
                </div>
            </section>
            <section class="deals py-5 text-center">
                <div class="container">
                    <h2>Product of the Day</h2>
                    <div class="row">
                        <div class="col-md-3 deal">
                            <img src="~/img/burger1.jpg" alt="Product 1" class="img-fluid" />
                            <h4>Whopper</h4>
                            <p> Price: $5.00</p>
                        </div>
                        <div class="col-md-3 deal">
                            <img src="~/img/burger2.jpg" alt="Product 2" class="img-fluid" />
                            <h4>BeefBurger</h4>
                            <p> Price: $6.00</p>
                        </div>
                        <div class="col-md-3 deal">
                            <img src="~/img/burger3.jpg" alt="Product 3" class="img-fluid" />
                            <h4>Grilled Lamb Burger</h4>
                            <p> Price: $6.50</p>
                        </div>
                        <div class="col-md-3 deal">
                            <img src="~/img/burger4.jpg" alt="Product 4" class="img-fluid" />
                            <h4>Cheesy Overload</h4>
                            <p> Price: $5.50</p>
                        </div>
                    </div>
                    <a class="btn see-more-button" href="/Products/Item">See More</a>
                </div>
            </section>
        </div>
    </body>
</html>