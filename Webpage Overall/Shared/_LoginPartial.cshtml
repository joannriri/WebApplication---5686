@using Microsoft.AspNetCore.Identity
@using BurgerQueen_PACUR12400.Model

@inject SignInManager<tbl_appuser> SignInManager
@inject UserManager<tbl_appuser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        if (User.IsInRole("admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="Admin" asp-page="/Admin/adminPanel">Admin</a>
            </li>
        }
        else if (User.IsInRole("user"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
            </li>
        }
}
else
{


    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
