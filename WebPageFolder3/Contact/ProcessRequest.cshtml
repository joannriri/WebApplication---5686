@page
@model BurgerQueen_PACUR12400.Pages.Contact.ProcessRequestModel
@{
    ViewData["Title"] = "Request Confirmation";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        @if (Model.IsSuccessful)
        {
            <div class="alert alert-success">
                <h2>Request Submitted Successfully</h2>
                <p>Thank you, <strong>@Model.CustomerName</strong>. Your request has been submitted.</p>
                <p>Details about your problem:</p>
                <p><strong>@Model.CustomerRequest</strong></p>
                <p>We will get back to you at <strong>@Model.CustomerEmail</strong> shortly.</p>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                <h2>Submission Failed</h2>
                <p>Sorry, there was an error submitting your request.</p>
                <p><strong>@Model.ErrorMessage</strong></p>
            </div>
        }
    </div>
</body>
</html>