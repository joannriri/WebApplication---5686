@page
@model ContactModel
@{
    ViewData["Title"] = "Request for Assistance";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Contact.css" />
</head>
<body>
    <div class="container">
        <h2>Submit Email Request for Assistance</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="sendmail.To" placeholder="Enter Email Address..">Recipient Email Address:</label>
                <input asp-for="sendmail.To" class="form-control" />
                <span asp-validation-for="sendmail.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sendmail.Subject" placeholder="Enter Subject..">Subject:</label>
                <input asp-for="sendmail.Subject" class="form-control" />
                <span asp-validation-for="sendmail.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sendmail.Body" placeholder="Enter Message..">Message:</label>
                <textarea asp-for="sendmail.Body" class="form-control" cols="25" rows="5"></textarea>
                <span asp-validation-for="sendmail.Body" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        @if (ViewData["Message"] != null)
        {
            <div class=" alert alert-success">
                @ViewData["Message"]
            </div>
        }

        <div id="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d63604.52349505233!2d114.88115949801772!3d4.892259882683873!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x32228ad19e2f88c3%3A0x26cdb1027b6f1d3!2sBurger%20King!5e0!3m2!1sen!2sbn!4v1716447087820!5m2!1sen!2sbn"
                    width="400" height="300" style="border:0;" allowfullscreen=""
                    loading="lazy" referrerpolicy="no-referrer-when-downgrade">
            </iframe>
            <noscript>
                <img src="~/img/map-static-img.jpg" alt="Static map of our store location">
            </noscript>
        </div>
    </div>
  
    @section Scripts {
        <script src="~/js/contact.js"></script>
    }
</body>
</html>
